@model ChatViewModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    html, 
    body, main {
        height: 100%;
        padding: 0px 0px 150px 0px;
    }
    .container {
        height: 100%;
    }
    body {margin:0px; padding:0px;}
    .chat-container {
        width: 100%;
        height: 100%;
        padding: 20px 40px 10px 40px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .msg {
        height: 100%;
        border: 1px solid green;
        margin-bottom: auto;
        display:block;
        overflow: scroll;
        width:100%;
        white-space:nowrap;
    }
    .msg {
        height: 100%;
    }
    .input {
        height: 50px;
    }
</style>
<div class="chat-container">
    <div class="msg">
        <div id="msgs" class="msgs">
            @foreach (var chat in @Model.Chats) {
                <strong>@chat.User.Name: </strong> @chat.Message<BR/>
            }
        </div>
    </div>
 
    <div class="input">
        <input type="text" style="max-width:unset;width:100%;max-width:100%" id="MessageField" placeholder="type message and press enter" />
    </div>
</div>
 
@section Scripts {
    <script>
        const userId = '@Model.UserID';
        const roomId = '@Model.RoomID';
        $(function () {
            var protocol = location.protocol === "https:" ? "wss:" : "ws:";
            var wsUri = protocol + "//" + window.location.host;
            var socket = new WebSocket(wsUri);

            socket.onopen = e => {
                console.log("socket opened", e);
            };
 
            socket.onclose = function (e) {
                console.log("socket closed", e);
            };
 
            socket.onmessage = function (e) {
                var message = JSON.parse(e.data);
                $('#msgs').append('<strong>' + message.User.Name + '</strong>: ' +  message.Message + '<br />');
            };
 
            socket.onerror = function (e) {
                console.error(e.data);
            };
 
            $('#MessageField').keypress(function (e) {
                if (e.which != 13) {
                    return;
                }
                e.preventDefault();
                var message = $('#MessageField').val();
                var messageToSend = {
                    UserID: userId,
                    RoomID: roomId,
                    Message: message
                };
                socket.send(JSON.stringify(messageToSend));
                $('#MessageField').val('');
            });
        });
    </script>
}
